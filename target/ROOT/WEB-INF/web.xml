<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
    
    <servlet>
        <servlet-name>FederatedLoginServlet</servlet-name>
        <servlet-class>FederatedLoginServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>FederatedLoginServlet</servlet-name>
        <url-pattern>/federatedlogin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AccountServlet</servlet-name>
        <servlet-class>AccountServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AccountServlet</servlet-name>
        <url-pattern>/account</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>SignInServlet</servlet-name>
        <url-pattern>/SignInServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>SignInServlet</servlet-name>
        <servlet-class>uk.ac.ncl.csc8106.servlet.SignInServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>SignUpServlet</servlet-name>
        <url-pattern>/SignUpServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>SignUpServlet</servlet-name>
        <servlet-class>uk.ac.ncl.csc8106.servlet.SignUpServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>SignOutServlet</servlet-name>
        <url-pattern>/SignOutServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>SignOutServlet</servlet-name>
        <servlet-class>uk.ac.ncl.csc8106.servlet.SignOutServlet</servlet-class>
    </servlet>
    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
</web-app>
